#include <iostream>
#include <string>

namespace PlannerCLI {

class ToDo {
public:
    ToDo(std::string description, int priority)
        : m_strDescription(description), m_nPriority(priority) {}

    std::string GetDescription() { return m_strDescription; }
    void SetDescription(std::string description) { m_strDescription = description; }

    int GetPriority() { return m_nPriority; }

private:
    std::string m_strDescription;
    int m_nPriority;
};

}
